<% provide(:page_title,@post.title) %>
<% provide(:author, 'active') %>

<div>
	<td><%= link_to 'Edit', edit_authors_post_path(@post), class: 'btn btn-sm btn-warning' %></td>
    <td><%= link_to 'Remove', authors_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</div>
<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-10 offset-lg-2 text-xs-center">
    <h1><%= @post.title %></h1>
    <p><%= @post.display_day_published %></p>
    <%= @post.body.html_safe %>
  </div>
</div>